{
  "ServiceOptions": {
    "Name": "PortalCore",
    "Version": "v1.0",
    "ServiceManagementEndpoint": "http://lp.servicemangement"
  },
  "JwtBearerOptions": {
    "Secret": "9f3acfa82146f5e4a7dabf17c2b63f538c0bcffb8872e889367df2e2c23cef94",
    "Issuer": "letportal.app",
    "Audience": "LetPortal",
    "TokenExpiration": 30,
    "RefreshTokenExpiration": 45
  },
  "BackupOptions": {
    "BackupFolderPath": "Backups",
    "RestoreFolderPath": "Restores",
    "MaximumObjects": 100
  },
  "FileOptions": {
    "FileStorageType": "Database",
    "DownloadableHost": "http://localhost:5142/v1.0/files",
    "DiskStorageOptions": {
      "AllowDayFolder": true,
      "Path": "~/UploadFiles"
    },
    "DatabaseStorageOptions": {
      "SameAsPortal": true
    },
    "FileValidatorOptions": {
      "MaximumFileSize": 16777216,
      "CheckFileExtension": true,
      "WhiteLists": "jpg;jpeg;gif;png;json;zip;",
      "ExtensionMagicNumbers": {
        "jpg": "FF-D8",
        "jpeg": "FF-D8",
        "gif": "47-79-46-38",
        "bmp": "42-4D",
        "tif": "49-49",
        "png": "89-50-4E-47",
        "ico": "00-00-01-00",
        "mp3": "49-44-33",
        "avi": "52-49-46-46",
        "mp4": "00-00-00-18-66-74-79-70-6D-70-34-32",
        "zip": "50-4B-03-04",
        "gz": "1F-8B-08",
        "tar": "75-73-74-61-72",
        "dll": "4D-5A",
        "exe": "4D-5A",
        "pdf": "25-50-44-46",
        "doc": "D0-CF-11-E0-A1-B1-1A-E1",
        "rtf": "7B-5C-72-74-66-31",
        "xls": "D0-CF-11-E0-A1-B1-1A-E1",
        "ppt": "D0-CF-11-E0-A1-B1-1A-E1",
        "docx": "50-4B-03-04",
        "xlsx": "50-4B-03-04",
        "pptx": "50-4B-03-04",
        "txt": "",
        "json": ""
      }
    }
  },
  "MonitorOptions": {
    "Enable": true,
    "NotifyOptions": {
      "Enable": true
    }
  },
  "DatabaseOptions": {
    "ConnectionString": "mongodb://mongodb:27017",
    "DataSource": "letportal",
    "ConnectionType": "MongoDB"
  },
  "MongoOptions": {
    "AllowedFunctions": [ "ObjectId", "ISODate", "NumberLong" ]
  },
  "MapperOptions": {
    "MySQL": {
      "decimal": "Decimal",
      "double": "Double",
      "float": "Float",
      "timespan": "Int64",
      "long": "Int64",
      "int": "Int32",
      "bool": "Bit",
      "date": "Datetime",
      "string": "LongText"
    },
    "PostgreSQL": {
      "decimal": "Money",
      "double": "Double",
      "float": "Double",
      "timespan": "Bigint",
      "long": "Bigint",
      "int": "Integer",
      "bool": "Boolean",
      "date": "Date",
      "string": "Text"
    },
    "SQLServer": {
      "decimal": "Decimal",
      "double": "Float",
      "float": "Float",
      "timespan": "BigInt",
      "long": "BigInt",
      "int": "Int",
      "bool": "Bit",
      "date": "DateTime",
      "string": "NVarChar"
    }
  },
  "LoggerOptions": {
    "NotifyOptions": {
      "Enable": true,
      "StatusCodes": [ 500 ]
    }
  },
  "Serilog": {
    "Using": [ "Serilog.Sinks.Console", "Serilog.Sinks.MongoDB", "Serilog.Sinks.File" ],
    "MinimumLevel": "Information",
    "WriteTo": [
      {
        "Name": "Console"
      },
      {
        "Name": "MongoDBCapped",
        "Args": {
          "databaseUrl": "mongodb://mongodb:27017/logs",
          "collectionName": "servicelogs"
        }
      }
    ],
    "Enrich": [ "FromLogContext" ]
  },
  "Logging": {
    "LogLevel": {
      "Default": "Warning"
    }
  },
  "AllowedHosts": "*"
}
